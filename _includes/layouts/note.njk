---
layout: layouts/base.njk
templateClass: iw_note
---
<div class="grid  grid--4">
  <div class="grid__column">
    {% include "partials/profile.njk" %}
  </div>
  <div class="grid__column  grid__column--span--3">
    <article class="note h-entry">
      <h1 class="hidden">{{ title }}</h1>
      {% if twitterId %}
        <a href="https://twitter.com/@justb3a/status/{{ twitterId }}" rel="syndication" class="u-syndication  note--syndication">
          {% set name = 'twitter' %}
          {% include 'partials/_svg.njk' %}
        </a>
      {% endif %}
      <div class="meta  note--meta">
        <time class="dt-published" datetime="{{ date | htmlDateString }}">
          <a class="u-url" href="{{ url }}">{{ date | readableDate }}</a>
        </time>
      </div>

      <div class="note--tags">
        {% for tag in tags %}
          {%- if tag != "notes" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>
      <div class="e-content p-name  note--content">
        {{ content | safe }}
      </div>

      {% include 'partials/webmentionlist.njk' %}
    </article>

    <nav class="nav-indieweb">
      <a href="{{ '' | url }}">
        {% set name = 'prev' %}
        {% include 'partials/_svg.njk' %}
        OLDER
      </a>

      <a href="{{ '' | url }}">
        NEWER
        {% set name = 'next' %}
        {% include 'partials/_svg.njk' %}
      </a>
    </nav>
  </div>
</div>
